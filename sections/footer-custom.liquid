        <span>{{ section.settings.text_2 }}</span>
      </div>
    </div>
  </div>
  <hr class="custom_delimiter">
  <div class="bottom_foter_part">
    <a href="{{section.settings.left_bottom_link}}" class="left_bottom_text">{{ section.settings.left_bottom_text }}</a>
    <div  class="footer_logo_img_wrapper"><img loading="lazy" src="{{ section.settings.logo | image_url }}" alt="logo"></div>
    <div class="right_bottom_text">{{ section.settings.right_bottom_text }}</div>
  </div>
</footer>

