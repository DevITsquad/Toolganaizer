      min-width: 35px;
    }
    .featured-collection-custom_wrapper .desctop_collection {
      display: none;
    }
    .featured-collection-custom_wrapper .markered_text {
      padding: 40px 12px 0 12px;
    }
    .featured-collection-custom_wrapper {
      height: 854px;
    }
    .featured-collection-custom_under_header {
      max-width: 336px;
      font-size: 14px;
      line-height: 20px;
    }
    .featured-collection-custom_grid {
      margin-top: 40px;
    }
    .featured-collection-custom_grid_element {
      justify-content: space-between;
      max-width: 241px;
    }
    .featured-collection-custom_grid_element img {
      max-width: 151px;
    }
    .featured-collection-custom_grid_element_description p,
    .featured-collection-custom_grid_element_description {
      font-size: 16px;
      line-height: 20px;
      max-width: 187px;
    }

    .featured-collection-custom_grid_element .prouct-link {
      font-size: 14px;
      line-height: 14px;
      padding: 13px 31.5px;
      margin-top: 20px;
    }
    .featured-collection-custom_bottom_btn {
      margin-top: 20px;
    }
    .featured-collection-custom_bottom_btn a {
      font-size: 16px;
      line-height: 16px;
    }
    .mobile_only {
      display: block !important;
    }
    .featured-collection-custom_wrapper .swiper-pagination {
      position: initial !important;
      margin-top: 25px;
    }
    .featured-collection-custom_wrapper .swiper-pagination-bullet {
      background: rgba(30, 75, 81, 1) !important;
      height: 12px !important;
      width: 12px !important;
    }
  }
