{% style %}
  .our-values_wrapper {
    background: var(--custom-background-secondary);
    min-height: 1022px;
    padding: 70px 12px;
    box-sizing: border-box;
  }

  .our-values_wrapper h2 {
    margin: 0;
    margin: auto;
    max-width: 656px;
    color: white;
    text-align: center;
  }

  .our-values_wrapper h2 p,
  .our-values_wrapper .our-values-items p {
    margin: 0;
  }
  .our-values_wrapper .our-values-items p {
    font-family: var(--custom-font-style-secondary);
    font-size: 16px;
    font-weight: 300;
    line-height: 24px;
    letter-spacing: 0em;
    text-align: center;
  }
  .our-values_under_header {
    font-family: var(--custom-font-style-secondary);
    font-size: 20px;
    font-weight: 600;
    line-height: 28px;
    letter-spacing: 0em;
    text-align: center;
    color: white;
    max-width: 699px;
    margin: 43px auto 60px auto;
  }

  .our-values-items {
    max-width: 1270px;
    display: flex;
    justify-content: center;
    column-gap: 128px;
    row-gap: 75px;
    align-items: center;
    margin: auto;
    margin-top: 60px;
    flex-wrap: wrap;
    align-items:center;
  }
  .our-values-item {
    max-width: 338px;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    text-align: center;
  }
  .our-values-item h4 {
    font-family: var(--custom-font-style-primary);
    font-size: 24px;
    font-weight: 600;
    line-height: 29px;
    letter-spacing: 0em;
    margin: 24px auto 20px auto;
    color: white;
    text-align: center;
  }
  .our-values-item img {
    width: 100px;
    height: 100px;
    min-width: 100px;
    min-height: 100px;
  }
  .our-values-item p{
    min-height:144px;
  }
  @media screen and (max-width: 900px) {
    .our-values-item {
      max-width: 300px;
    }
   
    .our-values-item img {
      width: 60px;
      height: 60px;
      min-width: 60px;
      min-height: 60px;
    }
    .our-values-items {
      margin-top: 30px;
    }

    .our-values-item {
      flex-direction: row;
      gap: 11px;
    }
    .our-values-items {
      flex-direction: column;
      gap: 30px;
    }
    .our-values_under_header {
      font-size: 14px;
      line-height: 20px;
      margin: 15px auto 30px auto;
    }
    .our-values-item h4 {
      font-size: 16px;
      line-height: 19px;
      margin: 0;
      text-align: left;
    }
    .our-values_wrapper .our-values-items p {
      font-size: 14px;
      line-height: 21px;
      text-align: left;
    }
    .our-values_wrapper .our-values-item div p {
        min-height:auto;
        margin-top:10px;
    }
    .our-values-item {
    align-items: start;
  }
  }
{% endstyle %}

<div class="our-values_wrapper">
  <h2 class="markered_text green">{{ section.settings.heading }}</h2>
  <p class="our-values_under_header">{{ section.settings.text_1 }}</p>

  <div class="our-values-items">
    {% for block in section.blocks %}
      <div class="our-values-item">
        <img src="{{ block.settings.image | image_url}}" alt="img" loading="lazy">
        <div>
          <h4>{{ block.settings.heading }}</h4>
          <p>{{ block.settings.paragraph }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "our-values",
  "max_blocks": 5,
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "heading",
      "default": "<p>our <strong>values</strong></p>"
    },
    {
      "type": "text",
      "id": "text_1",
      "label": "heading 1",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec facilisis mi vitae quam sodales."
    }
  ],
  "blocks": [
    {
      "type": "text-img",
      "name": "text",
      "settings": [
        {
          "label": "heading",
          "type": "text",
          "id": "heading"
        },
        {
          "label": "paragraph",
          "type": "text",
          "id": "paragraph"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "our-values"
    }
  ]
}
{% endschema %}
