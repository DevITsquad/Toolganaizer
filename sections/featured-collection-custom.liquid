<style>
  .featured-collection-custom_wrapper {
    background: #fffdf1;
    height: 1001px;
    box-sizing: border-box;
  }
  .featured-collection-custom_wrapper .markered_text p {
    margin: 0;
  }
  .featured-collection-custom_wrapper .markered_text {
    margin: 0;
    padding: 83px 12px 0 12px;
    background: linear-gradient(180deg, #efe9cc 0%, #fffdf1 100%), linear-gradient(0deg, #ffffff, #ffffff);
  }

  .featured-collection-custom_under_header,
  .featured-collection-custom_wrapper .markered_text {
    text-align: center;
  }
  .featured-collection-custom_under_header {
    max-width: 699px;
    margin: auto;
    margin-top: 21px;
    font-family: var(--custom-font-style-primary);
    font-size: 20px;
    font-weight: 700;
    line-height: 28px;
    letter-spacing: 0em;
    color: var(--custom-font-color-primary);
  }
  .featured-collection-custom_grid {
    padding: 0 12px;
    max-width: 1244px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    gap: 30px;
    margin: auto;
    margin-top: 60px;
  }

  .featured-collection-custom_grid_element {
    background: white;
    max-width: 288px;
    height: 544px;
    display: flex !important;
    flex-direction: column;
    align-items: center;
    justify-items: flex-start;
    box-shadow: 0px 0px 30px 0px #efe9cb;
    padding: 30px 0;
    box-sizing: border-box;
    border-radius: 4px;
  }

  .featured-collection-custom_grid_element p {
    margin: 0;
    margin-top: 16px;
    max-width: 213px;
  }
  .featured-collection-custom_grid_element img {
    max-width: 182px;
    height: 210px;
  }
  .featured-collection-custom_grid_element_description p,
  .featured-collection-custom_grid_element_description {
    font-family: var(--custom-font-style-primary);
    font-size: 20px;
    font-weight: 700;
    line-height: 25px;
    letter-spacing: 0px;
    text-align: center;
    color: var(--custom-font-color-primary);
    margin: 0;
    min-height: 60px;
    padding: 0 10px;
  }
  .featured-collection-custom_grid_element svg {
    margin-top: 8px;
  }

  .featured-collection-custom_grid_element .price__sale {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .featured-collection-custom_grid_element .price__sale span {
    font-family: var(--custom-font-style-secondary);
    font-size: 18px;
    font-weight: 400;
    line-height: 23px;
    letter-spacing: 0px;
    color: var(--custom-font-color-primary);
  }

  .featured-collection-custom_grid_element .prouct-link {
    font-family: var(--custom-font-style-primary);
    font-size: 16px;
    font-weight: 900;
    line-height: 16px;
    letter-spacing: 0em;
    text-align: left;
    color: white;
    background: #19bf6f;
    padding: 14.5px 34.5px;
    border-radius: 4px;
    text-decoration: none;
    margin-top: 27px;
  }

  .featured-collection-custom_grid_element .variants_tittle {
    font-family: var(--custom-font-style-secondary);
    font-size: 14px;
    font-weight: 400;
    line-height: 20px;
    letter-spacing: 0px;
    text-align: center;
    color: var(--custom-font-color-primary);
    margin-top: 4px;
  }
  .featured-collection-custom_grid_element .variants {
    height: 25px;
    width: 165px;
    display: flex;
    justify-content: space-between;
  }
  .featured-collection-custom_grid_element .variants svg {
    width: 25px;
    height: 25px;
  }

  .featured-collection-custom_bottom_btn {
    width: 256px;
    margin: auto;
    margin-top: 64px;
    height: 33px;
  }
  .featured-collection-custom_bottom_btn a {
    text-decoration: none;
    font-family: var(--custom-font-style-primary);
    font-size: 14px;
    font-weight: 900;
    line-height: 16px;
    letter-spacing: 0em;
    color: var(--custom-font-color-primary);
    display: flex;
    justify-content: space-between;
    align-items: end;
    width: 100%;
  }
  .featured-collection-custom_bottom_btn_border {
    display: block !important;
    width: 100%;
    height: 6px;
    border-radius: 6px;
    background: rgba(248, 233, 165, 1);
    max-width: 255px;
    margin: auto;
  }

  .mobile_only {
    display: none !important;
    margin-top: 40px;
  }
  @media screen and (max-width: 1200px) {
    .featured-collection-custom_grid .featured-collection-custom_grid_element:last-child {
      display: none !important;
    }
    .featured-collection-custom_grid {
      grid-template-columns: 1fr 1fr 1fr;
    }
    .featured-collection-custom_grid_element {
      margin: auto;
    }
  }

