<div class="what-are-you-waiting-section_wrapper">
  <div class="what-are-you-waiting-section_wrapper__inner">
    <h2 class="markered_text green">{{ section.settings.heading }}</h2>

    {%- if section.blocks.size > 0 -%}
      <div class="images-text-list">
        <div class="inner_item">
          {% for block in section.blocks %}
            <div class="what-are-you-waiting-img-text">
              {%- if block.settings.image != blank -%}
                {{ block.settings.image | image_url: width: 71 | image_tag: height: 71,loading:"lazy" }}
              {%- endif -%}
              <span>
                {{ block.settings.text }}
              </span>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endif %}

    <div class="what-are-you-waiting-text_block">
      {{ section.settings.text_p_1 }}
    </div>
    <div class="CTA_botton">
      <a href="{{ section.settings.link }}"
        ><span>{{ section.settings.text_in_button }}</span>
        <span style="margin-bottom:6px;">ðŸ‘‰</span>
      </a>
    </div>
    <div class="payment_wrapper_custom">
      <ul class="list list-payment" role="list">
        {%- for type in shop.enabled_payment_types -%}
          <li class="list-payment__item">
            {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
          </li>
        {%- endfor -%}
      </ul>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "what-are-you-waiting",
  "max_blocks": 3,
  "settings": [
    {
      "label": "heading",
      "type": "richtext",
      "id": "heading",
      "default": "<p>what are you waiting for get your <strong>power tool ganizer now</strong></p>"
    },
    {
      "label": "text1",
      "type": "text",
      "id": "text_1",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec facilisis mi vitae quam sodales."
    },
    {
      "label": "text_p_1",
      "type": "text",
      "id": "text_p_1",
      "default": "Shop Now for a Clutter-Free Tomorrow: Your Organized Space Awaits!"
    },
    {
      "label": "link",
      "type": "text",
      "id": "link_shop_now",
      "default": "https://toolganize.myshopify.com/collections/all"
    },
    {
      "label": "image_picker_desk",
      "type": "image_picker",
      "id": "image_desk"
    },
    {
      "label": "image_picker_mob",
      "type": "image_picker",
      "id": "image_mob"
    },
    {
      "label": "button_label",
      "type": "text",
      "id": "text_in_button",
      "default": "GET MINE NOW"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "text",
          "default": "built to last"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Img"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "what-are-you-waiting"
    }
  ]
}
{% endschema %}
