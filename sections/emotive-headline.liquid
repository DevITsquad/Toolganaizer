{% style %}
  .emotive-headline_wrapper {
    background: var(--custom-background-secondary);
    min-height: 605px;
    padding: 70px 12px;
    box-sizing: border-box;
  }

  .emotive-headline_wrapper h2 {
    margin: 0;
    margin: auto;
    max-width: 656px;
    color: white;
    text-align: center;
  }

  .emotive-headline_wrapper h2 p,
  .emotive-headline_wrapper .emotive-headline-items p {
    margin: 0;
  }
  .emotive-headline_wrapper .emotive-headline-items p {
    font-family: var(--custom-font-style-secondary);
    font-size: 16px;
    font-weight: 300;
    line-height: 24px;
    letter-spacing: 0em;
    text-align: center;
  }
  .emotive-headline_under_header {
    font-family: var(--custom-font-style-secondary);
    font-size: 20px;
    font-weight: 600;
    line-height: 28px;
    letter-spacing: 0em;
    text-align: center;
    color: white;
    max-width: 699px;
    margin: 43px auto 60px auto;
  }

  .emotive-headline-items {
    max-width: 1271px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: auto;
    margin-top: 60px;
  }
  .emotive-headline-item {
    max-width: 257px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: auto;
    color: white;
    text-align: center;
  }
  .emotive-headline-item h4 {
    font-family: var(--custom-font-style-primary);
    font-size: 24px;
    font-weight: 600;
    line-height: 29px;
    letter-spacing: 0em;
    margin: 24px auto 20px auto;

    color: white;
    text-align: center;
  }
  .emotive-headline-item img {
    width: 100px;
    height: 100px;
    min-width: 100px;
    min-height: 100px;
  }
  @media screen and (max-width: 900px) {
    .emotive-headline-item {
      max-width: 300px;
    }

    .emotive-headline-item img {
      width: 50px;
      height: 50px;
      min-width: 50px;
      min-height: 50px;
    }
    .emotive-headline-items {
      margin-top: 30px;
    }

    .emotive-headline-item {
      flex-direction: row;
      gap:11px;
     
    }
    .emotive-headline-items {
      flex-direction: column;
      gap:30px;
    }
    .emotive-headline_under_header {
      font-size: 14px;
      line-height: 20px;
      margin: 15px auto 30px auto;
    }
    .emotive-headline-item h4 {
      font-size: 16px;
      line-height: 19px;
      margin:0;
      text-align:left;
    }
    .emotive-headline_wrapper .emotive-headline-items p {
      font-size: 14px;
      line-height: 21px;
      text-align:left;
    }
  }
{% endstyle %}

<div class="emotive-headline_wrapper">
  <h2 class="markered_text green">{{ section.settings.heading }}</h2>
  <p class="emotive-headline_under_header">{{ section.settings.text_1 }}</p>

  <div class="emotive-headline-items">
    {% for block in section.blocks %}
      <div class="emotive-headline-item">
        <img src="{{ block.settings.image | image_url}}" alt="img" loading='lazy'>
        <div>
          <h4>{{ block.settings.heading }}</h4>
          <p>{{ block.settings.paragraph }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "emotive-headline",
  "max_blocks": 4,
  "settings": [
    {
      "type": "richtext",
      "id": "heading",
      "label": "heading",
      "default": "<p>emotive headline for <strong>features here</strong></p>"
    },
    {
      "type": "text",
      "id": "text_1",
      "label": "heading 1",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec facilisis mi vitae quam sodales. facilisis mi vitae"
    }
  ],
  "blocks": [
    {
      "type": "text-img",
      "name": "text",
      "settings": [
        {
          "label": "heading",
          "type": "text",
          "id": "heading"
        },
        {
          "label": "paragraph",
          "type": "text",
          "id": "paragraph"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "emotive-headline"
    }
  ]
}
{% endschema %}
