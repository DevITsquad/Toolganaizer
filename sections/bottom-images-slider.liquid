<style>
    .bottom_images_slider_wrapper {
      padding: 30px 27px;
      overflow:hidden;
    }

    .bottom_images_slider_wrapper .swiper-slide {
      width: 265px;
      height: 265px;
    }

    .bottom_images_slider_wrapper .swiper-wrapper{
    justify-content: space-between;
        }

    @media screen and (max-width: 1385px) {

      {% comment %} .swiper-bottom{
          width: 1385px;
      } {% endcomment %}

  }
    @media screen and (max-width: 870px) {

      {% comment %} .swiper-bottom{
          width: 872px;
      } {% endcomment %}
      .bottom_images_slider_wrapper {
          padding: 10px 0 0 0;
        }
      .bottom_images_slider_wrapper .swiper-slide {
        width: 166px;
        height: 166px;
      }
      .bottom_images_slider_wrapper .swiper-slide img {
          display: block;
          width: 100%;
          height: 100%;
          object-fit: cover;
      }

     .bottom_images_slider_wrapper .swiper-wrapper{
  margin-bottom:10px;

  }
    }
</style>

<div class="bottom_images_slider_wrapper">
  <!-- Slider main container -->
  <div class="swiper swiper-bottom">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          {{ block.settings.image | image_url: width: 265 | image_tag: height: 265 }}
          {% comment %} <img src="{{ block.settings.image | img_url }}" alt="img"> {% endcomment %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const mainSwiper = new Swiper('.swiper-bottom', {
     
        spaceBetween: 1,
    slidesPerView: 1,
    centeredSlides: true,
    roundLengths: true,
    loop: true,
    loopAdditionalSlides: 30,
      {% comment %} breakpoints: {
        870: {
            slidesPerView: 1,
            width: 265,
        },
        340: {
            slidesPerView: 1,
            width: 166,

        },

    }, {% endcomment %}
    });
  });
</script>
{% schema %}
{
  "name": "bottom-images-slider",
  "class": "section",
  "max_blocks": 5,
  "settings": [],
  "blocks": [
    {
      "type": "text",
      "name": "slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "logo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "bottom-images-slider"
    }
  ]
}
{% endschema %}
