<style>
    .dumy-custom-review{
      margin-top:31px;
      display:flex;
      align-items:center;
      gap:15px;
      max-width:490px
    }
    .dumy-custom-review div{
      display:flex;
      flex-direction:column;
      justify-content:left;
    }
    .dumy-custom-review img{
      width: 80px;
     height: 80px; 
    }
    .reviewer_text{
      font-family: var(--custom-font-style-secondary);
      font-size: 14px;
      font-weight: 400;
      line-height: 20px;
      letter-spacing: 0em;
      text-align: left;
      color:var(--custom-font-color-primary);

    }
    .reviewer_name{
      font-family:var(--custom-font-style-secondary);
      font-size: 12px;
      font-weight: 300;
      line-height: 14px;
      letter-spacing: 0em;
      text-align: left;
      color:var(--custom-font-color-primary);
      display:flex;
      align-items:center;
      gap:3px;
      margin-top:8px;
    }
    .custom-review-stars{
        text-align:left;
    }
    @media screen and (max-width:767px){
      .dumy-custom-review{
        max-width:336px
      }
    }
  </style>
    <div class="dumy-custom-review">
      <img loading="lazy" src="{{block.settings.image_1 | image_url}}" alt="img">
      <div>
      <span class='custom-review-stars'>
        {% for item in (1..5) %}
          <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 0L11.1137 6.89121L18 6.87539L12.42 11.1186L14.5623 18L9 13.7312L3.43769 18L5.58 11.1186L0 6.87539L6.88632 6.89121L9 0Z" fill="#FBBC04"/>
            </svg>
        {% endfor %}  
      </span>
    
      <span class="reviewer_text">
        {{block.settings.text_1}}
      </span>
      <span class="reviewer_name">
        {{block.settings.text_2 | split: "---" | first}} <svg width="14" height="15" viewBox="0 0 14 15" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M0 7.08594C0 3.23047 3.11719 0.0859375 7 0.0859375C10.8555 0.0859375 14 3.23047 14 7.08594C14 10.9688 10.8555 14.0859 7 14.0859C3.11719 14.0859 0 10.9688 0 7.08594ZM10.1445 5.88281C10.4453 5.58203 10.4453 5.11719 10.1445 4.81641C9.84375 4.51562 9.37891 4.51562 9.07812 4.81641L6.125 7.76953L4.89453 6.56641C4.59375 6.26562 4.12891 6.26562 3.82812 6.56641C3.52734 6.86719 3.52734 7.33203 3.82812 7.63281L5.57812 9.38281C5.87891 9.68359 6.34375 9.68359 6.64453 9.38281L10.1445 5.88281Z" fill="#1E4B51"/>
          </svg> 
          {{block.settings.text_2 | split: "---" | last}} 
      </span>
    </div>
    </div>