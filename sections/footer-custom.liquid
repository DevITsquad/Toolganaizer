<style>
  .footer-custom-wrapper {
    height: 587px;
    background: var(--custom-background-secondary);
    padding: 105px 12px 61px 12px;
  }
  .left_bottom_text{
    text-decoration:none;
    color:white;
  }
  .footer-custom-wrapper-inner {
    max-width: 1317px;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .footer-custom-wrapper h2 {
    max-width: 582px;
    margin: 0;
  }
  .footer-custom-wrapper h2 p {
    margin: 0;
    font-family: var(--custom-font-style-primary);
    font-size: 50px;
    line-height: 60px;
    letter-spacing: 0px;
    text-align: left;
    font-weight: 400;
    color: white;
  }
  .footer-custom-wrapper h2 p b {
    font-weight: 700;
  }
  .footer-custom-form-wrapper {
    max-width: 552px;
    flex-basis: 50%;
  }
  .footer-custom-wrapper_subscribe {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60px;
    border: none;
    box-sizing: border-box;
    border-radius: 4px;
    margin-top: 15px;
    background: rgba(255, 255, 255, 1);
  }
  .footer-custom-wrapper_subscribe span {
    font-family: var(--custom-font-color-primary);
    font-size: 25px;
    font-weight: 900;
    line-height: 30px;
    letter-spacing: 0px;
    text-align: center;
    color: var(--custom-font-color-primary);
  }
  .footer-custom-wrapper .field__input {
    border: 1px solid rgba(255, 255, 255, 1);
    background: var(--custom-background-secondary);
    color: rgba(249, 249, 249, 1);
    height: 60px;
  }
  .footer-custom-wrapper .field__label {
    display: flex;
    align-items: center;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(249, 249, 249, 0.5);
    font-family: var(--custom-font-style-secondary);
    font-size: 20px;
    font-weight: 400;
    line-height: 26px;
    letter-spacing: 0px;
    text-align: left;
  }
  .footer-custom-wrapper .field__input:focus ~ .field__label {
    top: calc(var(--inputs-border-width) + 1rem);
  }

  .text_under_subsciption {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 9px;
  }
  .text_under_subsciption span {
    font-family: var(--custom-font-style-secondary);
    font-size: 14px;
    font-weight: 400;
    line-height: 18px;
    letter-spacing: 0px;
    text-align: left;
    color: white;
    margin-top: 10px;
  }
  .footer-custom-wrapper .custom_delimiter {
    max-width: 1240px;
    background: rgba(223, 211, 153, 0.3);
    margin: 82px auto 72px auto;
  }

  .bottom_foter_part div {
    font-family: var(--custom-font-style-primary);
    font-size: 16px;
    font-weight: 400;
    line-height: 24px;
    letter-spacing: 0em;
    color: white;
  }

  .bottom_foter_part {
    display: flex;
    max-width: 1271px;
    margin: auto;
    justify-content: space-between;
    align-items: center;
  }

  .footer_logo_img_wrapper img {
    margin-left: -160px;
  }
  @media screen and (max-width: 1200px) {
    .footer-custom-wrapper {
      height: auto;
    }
    .footer_logo_img_wrapper img {
      margin-left: 0;
    }
    .footer-custom-form-wrapper {
      width: 100%;
    }

    .footer-custom-wrapper .newsletter-form__field-wrapper {
      margin-top: 30px;
    }
  }
  @media screen and (max-width: 1000px) {
    .footer-custom-wrapper-inner {
      flex-direction: column;
    }

    .footer-custom-wrapper h2 p {
      text-align: center;
    }
  }
  @media screen and (max-width: 767px) {
    .footer-custom-wrapper .custom_delimiter {
      margin: 30px auto;
    }

    .footer-custom-wrapper {
      padding: 40px 12px;
    }

    .footer-custom-wrapper h2 p {
      font-size: 26px;
      line-height: 31px;
      text-align: center;
      max-width: 336px;
    }
    .text_under_subsciption span {
      font-size: 12px;
      line-height: 16px;
    }

    .bottom_foter_part div {
      font-size: 14px;
      line-height: 17px;
    }
    .bottom_foter_part {
      flex-direction: column;
    }
    .footer_logo_img_wrapper {
      order: -1;
      max-width: 177px;
      margin-bottom: 22px;
    }
    .footer_logo_img_wrapper img {
      width: 100%;
    }
    .left_bottom_text {
      margin-bottom: 10px;
    }
    .footer-custom-wrapper .field__label {
      font-size: 16px;
      line-height: 21px;
    }

    .footer-custom-wrapper_subscribe span {
      font-size: 20px;
      line-height: 24px;
    }
  }
</style>
<footer id="leaveEmail" class="footer-custom-wrapper">
  <div class="footer-custom-wrapper-inner">
    <h2 class="markered_text green">{{ section.settings.heading }}</h2>
    <div class="footer-custom-form-wrapper">
      {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__field-wrapper">
          <div class="field">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="field__input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="ContactFooter-error"
              {% elsif form.posted_successfully? %}
                aria-describedby="ContactFooter-success"
              {% endif %}
              placeholder="{{ section.settings.place_holder }}"
              required
            >
            <label class="field__label" for="NewsletterForm--{{ section.id }}">
              {{ section.settings.place_holder }}
            </label>
          </div>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="ContactFooter-error">
              {%- render 'icon-error' -%}
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </small>
          {%- endif -%}
        </div>
        {%- if form.posted_successfully? -%}
          <h3
            class="newsletter-form__message newsletter-form__message--success form__message"
            id="ContactFooter-success"
            tabindex="-1"
            autofocus
          >
            {% render 'icon-success' -%}
            {{- 'newsletter.success' | t }}
          </h3>
        {%- endif -%}

        <button
          type="submit"
          class="newsletter-form__button footer-custom-wrapper_subscribe"
          name="commit"
          id="Subscribe"
          aria-label="{{ 'newsletter.button_label' | t }}"
        >
          <span>{{ section.settings.text_1 | upcase }}</span>
        </button>
      {%- endform -%}
      <div class="text_under_subsciption">
